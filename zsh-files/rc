. ~/dotfiles/general-shell-files/aliases        # shell aliases
. ~/dotfiles/general-shell-files/aliases_git    # git aliases
. ~/dotfiles/general-shell-files/functions      # self-defined shell functions
. ~/dotfiles/general-shell-files/functions_git  # self-defined shell functions in git context
. ~/dotfiles/zsh-files/prompt                   # prompt config
. ~/dotfiles/zsh-files/options                  # zsh options
. ~/dotfiles/zsh-files/completion               # tab completion config

# Env vars
if [ $(uname -s) = 'Darwin' ]; then
  export LANG="de_DE.UTF-8"
  export EDITOR='vim'
  export PATH="$PATH:$HOME/bin:/usr/local/bin:/usr/bin:/bin:/usr/local/sbin:/usr/sbin:/sbin:/usr/X11/bin"
  export MANPATH="/usr/local/share/man:/usr/X11/man:/usr/share/man"
else
  export PATH="$HOME/bin:/usr/local/bin:/usr/bin:/bin:/usr/local/sbin:/usr/sbin:/sbin"
fi
