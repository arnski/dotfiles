# XDEBUG PHPSTORM SETTINGS
#
# ################

# Debug- Settings fuer PHPSTORM und CLI- Skripte 
alias bugOn="export XDEBUG_CONFIG=\"idekey=phpstorm remote_host=`expr "$SSH_CLIENT" : '\(^[0-9.]*\)'`\";export SERVER_PORT=80;export SERVER_NAME=zdb-dev.local"
alias bugOff="unset XDEBUG_CONFIG;unset SERVER_PORT;unset SERVER_NAME"